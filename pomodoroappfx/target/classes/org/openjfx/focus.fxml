<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.FocusController" styleClass="focus-root" prefWidth="650" prefHeight="800">
    
    <Label text="it's time to focus!" styleClass="focus-title"/>
    <Label fx:id="goalLabel" text="Default Text" styleClass="goal-text"/>

    <Label fx:id="focusTimerLabel" styleClass="main-timer"/>
    <Label text="until your break" styleClass="break-text"/>

    <Label fx:id="sessionTimerLabel" text="2:00:00" styleClass="session-timer"/>
    <Label text="left in this session" styleClass="session-subtext"/>

    <Button text="reset session" styleClass="reset-button" onAction="#switchToSecondary"/>
</VBox>