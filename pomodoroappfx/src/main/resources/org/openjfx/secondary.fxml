<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.SecondaryController" styleClass="root" prefWidth="650" prefHeight="800">
    
    <Label text="Set your goal for this session:" styleClass="label-title"/>
    <TextField promptText="i want to.." styleClass="goal-input" fx:id="goalInputText"/>

    <Label text="Session length:" styleClass="label-title"/>
    <ComboBox promptText="hr(s)" styleClass="dropdown" fx:id="sessionDropdown"/>

    <Button text="begin timer" styleClass="start-button" onAction="#switchToFocus"/>
</VBox>
